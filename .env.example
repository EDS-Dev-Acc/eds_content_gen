# EMCIP Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# =============================================================================
# Django Settings
# =============================================================================
SECRET_KEY=your-secret-key-here-generate-with-django
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database (PostgreSQL) - Used by docker-compose
# =============================================================================
# For Docker Compose (matches docker-compose.yml defaults):
DB_NAME=emcip
DB_USER=emcip
DB_PASSWORD=emcip_dev_password
DB_HOST=localhost
DB_PORT=5432

# Alternative: Single URL format
# DATABASE_URL=postgresql://emcip:emcip_dev_password@localhost:5432/emcip

# For SQLite fallback (leave DB_NAME empty to use SQLite):
# DB_NAME=

# =============================================================================
# Redis (for Celery and Caching) - Used by docker-compose
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Set to True for local dev without Redis:
CELERY_TASK_ALWAYS_EAGER=False

# =============================================================================
# LLM APIs
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
OPENAI_API_KEY=sk-your-openai-key-here-optional

# LLM Configuration
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7

# =============================================================================
# Translation API
# =============================================================================
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key-here
# Or for application credentials:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
DEFAULT_TARGET_LANGUAGE=en
ENABLE_TRANSLATION=False

# =============================================================================
# AWS S3 (for production file storage)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=emcip-storage
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# Email (for notifications - optional)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@emcip.com

# =============================================================================
# Monitoring (optional)
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# OpenTelemetry Tracing (optional)
# =============================================================================
OTEL_ENABLED=false
OTEL_SERVICE_NAME=emcip
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_CONSOLE_EXPORT=false

# Application version for tracing
APP_VERSION=1.0.0

# =============================================================================
# Search API (for source discovery - optional)
# =============================================================================
SERPAPI_KEY=your-serpapi-key
# Or
GOOGLE_CUSTOM_SEARCH_KEY=your-google-search-key
GOOGLE_CUSTOM_SEARCH_CX=your-search-engine-id

# =============================================================================
# Crawler Settings
# =============================================================================
CRAWLER_USER_AGENT=EMCIP-Bot/1.0 (Content Intelligence Platform)
CRAWLER_DELAY=2
CRAWLER_MAX_PAGES=3
MAX_ARTICLES_PER_CRAWL=50
AUTO_PROCESS_ARTICLES=True

# =============================================================================
# Application Settings
# =============================================================================
TRANSLATION_CACHE_TTL=2592000
SEARCH_QUERIES_PER_DAY=10

# =============================================================================
# Security (Production only)
# =============================================================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# =============================================================================
# Docker Compose Debug Tools (optional profiles)
# =============================================================================
PGADMIN_EMAIL=admin@emcip.local
PGADMIN_PASSWORD=admin
