# EMCIP Production Environment Variables
# Copy to .env and configure all required values

# =============================================================================
# REQUIRED - Django Core
# =============================================================================
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=<GENERATE_A_SECURE_KEY>

# Comma-separated list of allowed hostnames
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# =============================================================================
# REQUIRED - Database (PostgreSQL)
# =============================================================================
DB_NAME=emcip
DB_USER=emcip
DB_PASSWORD=<SECURE_DATABASE_PASSWORD>
DB_HOST=postgres
DB_PORT=5432

# Alternative: Single DATABASE_URL format
# DATABASE_URL=postgresql://emcip:<password>@postgres:5432/emcip

# =============================================================================
# REQUIRED - Redis
# =============================================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# =============================================================================
# REQUIRED - LLM API Keys (at least one)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-<your-key>
OPENAI_API_KEY=sk-<your-key>

# LLM Settings
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7

# =============================================================================
# OPTIONAL - Translation
# =============================================================================
GOOGLE_TRANSLATE_API_KEY=
# Or: GOOGLE_APPLICATION_CREDENTIALS=/app/credentials.json
DEFAULT_TARGET_LANGUAGE=en
ENABLE_TRANSLATION=false

# =============================================================================
# OPTIONAL - AWS S3 (for media files)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=emcip-media
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# OPTIONAL - Email (for notifications)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=true
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# OPTIONAL - Monitoring & Observability
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=

# OpenTelemetry for distributed tracing
OTEL_ENABLED=false
OTEL_SERVICE_NAME=emcip
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317

# Application version (for tracing/Sentry releases)
APP_VERSION=1.0.0

# =============================================================================
# OPTIONAL - Security Overrides
# =============================================================================
# Disable SSL redirect for testing (NOT for production)
SECURE_SSL_REDIRECT=true

# =============================================================================
# OPTIONAL - Crawler Settings
# =============================================================================
CRAWLER_USER_AGENT=EMCIP-Bot/1.0 (Content Intelligence Platform)
CRAWLER_DELAY=2
CRAWLER_MAX_PAGES=3
MAX_ARTICLES_PER_CRAWL=50
AUTO_PROCESS_ARTICLES=true

# =============================================================================
# Docker Compose Settings
# =============================================================================
# External ports (change if conflicts)
WEB_PORT=8000
HTTP_PORT=80
HTTPS_PORT=443
DB_PORT=5432
REDIS_PORT=6379

# Grafana (if using observability profile)
GRAFANA_USER=admin
GRAFANA_PASSWORD=<SECURE_GRAFANA_PASSWORD>
